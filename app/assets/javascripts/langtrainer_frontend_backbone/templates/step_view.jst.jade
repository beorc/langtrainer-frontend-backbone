.col-xs-6
  .panel.panel-default
    .panel-heading
      ul.list-inline
        li
          a.lt-question-help-toggle(href='javascript:void(0)', title=LangtrainerI18n.t('step_view.question.toggle_help'), data-toggle='tooltip', data-placement='bottom')
            span.fa-stack.fa-lg.lt-question-help-enabled
              i.fa.fa-question.fa-stack-1x
              i.fa.fa-circle-thin.fa-stack-2x
            span.fa-stack.fa-lg.lt-question-help-disabled.hide
              i.fa.fa-question.fa-stack-1x
              i.fa.fa-ban.fa-stack-2x.text-danger

    .panel-body.lt-area
      .lt-question
    .lt-question-notification
.col-xs-6
  .panel.panel-default
    .panel-heading
      ul.list-inline
        li
          a.lt-check-answer(href='javascript:void(0)', title=LangtrainerI18n.t('step_view.check_answer'), data-toggle='tooltip', data-placement='bottom')
            i.fa.fa-check-square-o
        li
          a.lt-next-step(href='javascript:void(0)', title=LangtrainerI18n.t('step_view.next_step'), data-toggle='tooltip', data-placement='bottom')
            i.fa.fa-refresh
        li
          a.lt-show-next-word(href='javascript:void(0)', title=LangtrainerI18n.t('step_view.show_next_word'), data-toggle='tooltip', data-placement='bottom')
            i.fa.fa-magic
        li
          a.lt-show-right-answer(href='javascript:void(0)', title=LangtrainerI18n.t('step_view.show_right_answer'), data-toggle='tooltip', data-placement='bottom')
            i.fa.fa-flag-o

      ul.list-inline.lt-indicators
        li.lt-wrong-answer
          a(href='javascript:void(0)', title=LangtrainerI18n.t('step_view.answer.wrong_hint'), data-toggle='tooltip', data-placement='bottom')
            i.fa.fa-exclamation-circle
    .panel-body.lt-area
      textarea.lt-answer(placeholder=LangtrainerI18n.t('step_view.answer.placeholder'), tabindex='0', spellcheck='false', autocapitalize='off', autocomplete='off', autocorrect='off')
    .lt-answer-notification
