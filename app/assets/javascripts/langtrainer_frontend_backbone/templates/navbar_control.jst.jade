ul.main-menu.lt-navbar-control.list-inline
  if Langtrainer.LangtrainerApp.currentUser.signedIn()
    li
      span.user-email= Langtrainer.LangtrainerApp.currentUser.get('email')
    li
      a.sign-out-btn(href='javascript:void(0)', rel='nofollow')=LangtrainerI18n.t('sign_out')
  else
    li
      a.sign-in-btn(href='javascript:void(0)', rel='nofollow')=LangtrainerI18n.t('sign_in')
    li
      a.sign-up-btn(href='javascript:void(0)', rel='nofollow')=LangtrainerI18n.t('sign_up')
