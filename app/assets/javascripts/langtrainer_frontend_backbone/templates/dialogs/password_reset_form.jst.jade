if model.validationErrorFor('serverError')
  .alert.alert-danger= model.validationErrorFor('serverError')
form(role='form')
  .form-group.password(class=model.validationErrorFor('password') ? 'has-error' : null)
    label.control-label(for='password')=LangtrainerI18n.t('dialog.password_reset.password')
    input#password.form-control(type='password', autocomplete='off', name='password', value=model.get('password'))
    if model.validationErrorFor('password')
      p.help-block= model.validationErrorFor('password')
  .form-group.password-confirmation(class=model.validationErrorFor('password_confirmation') ? 'has-error' : null)
    label.control-label(for='password_confirmation')=LangtrainerI18n.t('dialog.password_reset.password_confirmation')
    input#password_confirmation.form-control(type='password', autocomplete='off', name='password_confirmation', value=model.get('password_confirmation'))
    if model.validationErrorFor('password_confirmation')
      p.help-block= model.validationErrorFor('password_confirmation')

  .actions
.modal-footer
  .pull-left
    button.btn.btn-primary.js-submit(type='submit')=LangtrainerI18n.t('dialog.password_reset.submit')
  =LangtrainerI18n.t('dialog.password_reset.remember_password')
  &nbsp;
  a.sign-in-btn(href='#', rel='nofollow')=LangtrainerI18n.t('dialog.password_reset.sign_in')
