.modal-dialog
  .modal-content
    .modal-header
      button.close(type='button', data-dismiss='modal')
        span(aria-hidden='true') &times;
      h4.modal-title=LangtrainerI18n.t('dialog.sign_up.title')
    .modal-body
      .step-a
        if model.validationErrorFor('serverError')
          .alert.alert-danger= model.validationErrorFor('serverError')
        form(role='form')
          .form-group.email(class=model.validationErrorFor('email') ? 'has-error' : null)
            label.control-label(for='email') E-mail
            input#email.form-control(type='email', name='email', value=model.get('email'), spellcheck='false')
            if model.validationErrorFor('email')
              p.help-block= model.validationErrorFor('email')
          .form-group.password(class=model.validationErrorFor('password') ? 'has-error' : null)
            label.control-label(for='password')=LangtrainerI18n.t('dialog.sign_up.password')
            input#password.form-control(type='password', autocomplete='off', name='password', value=model.get('password'))
            if model.validationErrorFor('password')
              p.help-block= model.validationErrorFor('password')
          .form-group.password-confirmation(class=model.validationErrorFor('password_confirmation') ? 'has-error' : null)
            label.control-label(for='password_confirmation')=LangtrainerI18n.t('dialog.sign_up.password_confirmation')
            input#password_confirmation.form-control(type='password', autocomplete='off', name='password_confirmation', value=model.get('password_confirmation'))
            if model.validationErrorFor('password_confirmation')
              p.help-block= model.validationErrorFor('password_confirmation')

          .actions
        .modal-footer
          .pull-left
            button.btn.btn-primary.js-submit(type='submit')=LangtrainerI18n.t('dialog.sign_up.submit')
          =LangtrainerI18n.t('dialog.sign_up.already_registered')
          &nbsp;
          a.sign-in-btn(href='#', rel='nofollow')=LangtrainerI18n.t('dialog.sign_up.sign_in')
      .step-b
        p=LangtrainerI18n.t('dialog.sign_up.success')
        .modal-footer
          .pull-left
            button.btn.btn-primary.js-close=LangtrainerI18n.t('dialog.sign_up.close')
